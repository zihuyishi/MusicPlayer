<UserControl x:Class="VolumnBar.VolumnBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="300">
    <Grid x:Name="MainGrid" MouseMove="MainGrid_MouseMove" SizeChanged="MainGrid_SizeChanged" MouseLeftButtonDown="MainGrid_MouseLeftButtonDown">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#00ff0000" Offset="1"/>
                <GradientStop Color="#FFFF0404" Offset="0.5"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Ellipse x:Name="OneEllipse" HorizontalAlignment="Right" Height="10" Margin="0,0,0,0" Stroke="#003CD424" VerticalAlignment="Top" Width="10">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#ff66ccff" Offset="0.466"/>
                    <GradientStop Color="#0066ccff" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
